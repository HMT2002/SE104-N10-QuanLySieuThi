<Window x:Class="SE104_N10_QuanLySieuThi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_N10_QuanLySieuThi"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="btnBuy"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,5,0,0"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Times New Roman"
                Foreground="#D800FF00" 
                Content="Nhập kho" Click="btnBuy_Click" 
                
                />
        <Button x:Name="btnSell"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,65,0,0"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"     
                FontFamily="Times New Roman"           
                Foreground="#D800FF00"    
                Content="Bán hàng" Click="btnSell_Click"
            />
        <Button x:Name="bntHumanRes"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,125,0,0"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"     
                FontFamily="Times New Roman"           
                Foreground="#D800FF00"    
                Content="Nhân sự" Click="bntHumanRes_Click"
            />
        <Button x:Name="btnReport"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,185,0,0"
                Width="150"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"     
                FontFamily="Times New Roman"           
                Foreground="#D800FF00"    
                Content="Báo cáo thống kê" Click="btnReport_Click"
            />

        <TabPanel x:Name="pTaskTab"
                  Grid.Column="1" Grid.Row="1"
                  Background="#FFB3F9F9"
                  
            />
    </Grid>
</Window>
