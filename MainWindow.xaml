<Window x:Class="SE104_N10_QuanLySieuThi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_N10_QuanLySieuThi"
        mc:Ignorable="d"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="1">
            <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://www.youtube.com/">
                   link yt
            </Hyperlink>
        </TextBlock>
        
        <Button x:Name="sect1"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,5,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Times New Roman"
                Foreground="#D800FF00" 
                Content="section 1" 
                MouseEnter="sect1_MouseEnter"
                MouseLeave="sect1_MouseLeave"
                Click="sect1_Click"
                
                />
        <Button x:Name="sect2"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,40,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Times New Roman"
                Foreground="#D800FF00" 
                Content="secion 2"
                MouseEnter="sect2_MouseEnter"
                MouseLeave="sect2_MouseLeave"
                
                />

        <Button x:Name="sect3"
                Grid.Column="0" Grid.Row="0" 
                Margin="0,75,0,0"
                Width="150"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"   
                FontFamily="Times New Roman"
                Foreground="#D800FF00"  
                Content="secion 3"
                MouseEnter="sect3_MouseEnter"
                MouseLeave="sect3_MouseLeave"
                
                
                />

    </Grid>
</Window>
