<Window x:Class="SE104_N10_QuanLySieuThi.windows.winBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_N10_QuanLySieuThi.windows"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:SE104_N10_QuanLySieuThi.usercontrols"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="550"
        DataContext="{StaticResource SellVM}"
        x:Name="BillWin"
        Title="winBill">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ucControlBar Tag="{Binding Title,ElementName=LoginWin}"></uc:ucControlBar>
        </Grid>
        <Grid Grid.Row="1">
            <ListView ItemsSource="{Binding ListSelecteditems}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding sanpham.MASP}"
                                        Header="Stt" />
                        <GridViewColumn DisplayMemberBinding="{Binding sanpham.MASP}"
                                        Header="Mã sản phẩm"
                                        Width="150" />
                        <GridViewColumn DisplayMemberBinding="{Binding sanpham.TENSP}"
                                        Header="Tên hàng"
                                        Width="150" />
                        <GridViewColumn DisplayMemberBinding="{Binding Amount}"
                                        Header="Số lượng"
                                        Width="120" />
                        <GridViewColumn DisplayMemberBinding="{Binding sanpham.GIA}"
                                        Header="Đơn giá"
                                        Width="110" />
                        <GridViewColumn DisplayMemberBinding="{Binding Summary}"
                                        Header="Thành tiền"
                                        Width="150" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding ThanhTien,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                <Button Style="{StaticResource MaterialDesignRaisedLightButton}"
                    ToolTip="Resource name: MaterialDesignRaisedLightButton"
                    Content="Confirm"
                    VerticalAlignment="Bottom"
                    Margin="20"
                    Command="{Binding ConfirmPaymentCmd}"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    HorizontalAlignment="Right" />

            </StackPanel>

        </Grid>
    </Grid>
</Window>
