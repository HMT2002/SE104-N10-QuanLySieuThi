<Page x:Class="SE104_N10_QuanLySieuThi.paProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SE104_N10_QuanLySieuThi"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="1120"
      Title="paProduct"
      Background="#8F40E8"
      x:Name="ProductPage"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      DataContext="{StaticResource ProductVM }"
      >

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedPageCmd}" CommandParameter="{Binding ElementName=ProductPage}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid x:Name="grdMain">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedGridCmd}" CommandParameter="{Binding ElementName=grdMain}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Button
  Style="{StaticResource MaterialDesignRaisedDarkButton}"
  Width="100"
  ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
  Content="Bill"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="1010,10,10,578" 
                Command="{Binding BillCommand}"
                CommandParameter="{Binding ElementName=ProductPage}"
            />
        <Button
            x:Name="btnCountClick"
  Style="{StaticResource MaterialDesignRaisedLightButton}"
  Width="150"
  ToolTip="Resource name: MaterialDesignRaisedLightButton"
  Content="{Binding OrClickMeCount}"
  Command="{Binding IncrementOrClickMeCountCommand }" CommandParameter="{Binding ElementName=btnCountClick}"
  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
            >
            <Button.InputBindings>
                <MouseBinding Gesture="RightClick" Command="{Binding DecreasementOrClickMeCountCommand}"
                              CommandParameter="{Binding ElementName=btnCountClick}"/>
            </Button.InputBindings>
        </Button>
    </Grid>
</Page>
