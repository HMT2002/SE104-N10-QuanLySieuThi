<Page x:Class="SE104_N10_QuanLySieuThi.paCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SE104_N10_QuanLySieuThi"
      mc:Ignorable="d"
      d:DesignHeight="620"
      d:DesignWidth="1120"
      Title="paCustomer"
      Background="#81B4FA"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      DataContext="{StaticResource CustomerVM}"
      x:Name="CustomerPage">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Type"
                              ItemsSource="{Binding SearchType,Mode=TwoWay}"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Width="120"
                              Height="50"
                              SelectedItem="{Binding SearchTypeItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                    </ComboBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                        </Grid>
                        <Grid Grid.Column="0">
                            <materialDesign:PackIcon Kind="Magnify"
                                                     VerticalAlignment="Center" />
                        </Grid>

                        <Grid Grid.Column="1">
                            <TextBox materialDesign:HintAssist.Hint="Type here"
                                     Name="txtSearch"
                                     Width="auto"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Search,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     VerticalAlignment="Center"
                                     Margin="30,6,534,6.6" />
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <ListBox ItemsSource="{Binding KhachHangList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding SelectedItem,Mode=TwoWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"
                                         IsItemsHost="True">

                            </UniformGrid>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch">
                                <materialDesign:Card Background="NavajoWhite"
                                                     UniformCornerRadius="10"
                                                     HorizontalAlignment="Stretch"
                                                     HorizontalContentAlignment="Stretch"
                                                     VerticalContentAlignment="Stretch"
                                                     VerticalAlignment="Stretch"
                                                     Width="250"
                                                     Height="250">
                                    <StackPanel Background="#00F5F50C"
                                                Height="auto"
                                                Width="auto"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch">
                                        <Image Source="{Binding Bitimg}"
                                               Width="100"
                                               Height="100"
                                               Margin="3 3 3 3"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"></Image>
                                        <TextBlock Text="{Binding khachhang.MAKH}"
                                                   Margin="3 3 3 3"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"></TextBlock>
                                        <TextBlock Text="{Binding khachhang.HOTEN}"
                                                   Margin="3 3 3 3 "
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"></TextBlock>
                                    </StackPanel>
                                </materialDesign:Card>
                            </WrapPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding LoadedItemCtrlCmd}"
                                                   CommandParameter="{Binding ElementName=itemctrlMain}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>

            </Grid>
        </Grid>

    </Grid>
</Page>
